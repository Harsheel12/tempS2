<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- Define appenders (where logs go) -->
    <Appenders>
        <!-- Console appender - logs to console/terminal -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- File appender - logs to a file -->
        <File name="FileAppender" fileName="logs/safety-deposit-box.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <!-- Rolling file appender - creates new log files when size limit is reached -->
        <RollingFile name="RollingFileAppender"
                     fileName="logs/safety-deposit-box-rolling.log"
                     filePattern="logs/safety-deposit-box-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <!-- Roll over daily -->
                <TimeBasedTriggeringPolicy />
                <!-- Roll over when file reaches 10MB -->
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <!-- Keep max 10 files -->
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <!-- Define loggers -->
    <Loggers>
        <!-- Root logger - catches all logs -->
        <Root level="debug">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="RollingFileAppender"/>
        </Root>

        <!-- Specific logger for SafetyDepositBoxService with DEBUG level -->
        <Logger name="SafetyDepositBoxService" level="debug" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Specific logger for SafetyDepositBox classes -->
        <Logger name="SafetyDepositBox" level="debug" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>
    </Loggers>
</Configuration>